<%= form_tag inventory_index_path, {id: 'inventory-form'} do %>
    <%= select_tag 'apparel_types',
                   options_for_select(@apparels),
                   include_blank: true
    %>
    <%= select_tag 'sizes',
                   options_for_select(@sizes),
                   include_blank: true
    %>
    <%= text_field_tag :quantity, nil %>
    <%= button_tag 'Submit' %>
<% end %>